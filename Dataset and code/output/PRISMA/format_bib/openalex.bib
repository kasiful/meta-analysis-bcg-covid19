}
@article{pop00017,
	author = {S. Abbas Shobeiri and Cristiane F. Giacomelli and Patrícia A.F. Leme and Keini Buosi and Luciana S.B. Dal Col and Franciele A. V. Dionato and Cristiane Socorro Ferraz Maia and Reza Yadollahvandmiandoab and Adilson P Domingues-Junior and Leonardo Oliveira Reis},
