@article{pop00024,
	author = {Eva Kaufmann and Nargis Khan and Kim Phuc Tran and Antigona Ulndreaj and Erwan Pernet and Ghislaine Fontes and Andréanne Lupien and Patrice Desmeules and Fiona McIntosh and Amina Abow and Mihai G. Netea and Priya A. Debisarun and Karen L. Mossman and Arinjay Banerjee and Danielle Karo-Atar and Mina Sadeghi and Samira Mubareka and Donald C. Vinh and Irah L. King and Clinton S. Robbins and Marcel A. Behr and Mihai G. Netea and Philippe Joubert and Maziar Divangahi},
