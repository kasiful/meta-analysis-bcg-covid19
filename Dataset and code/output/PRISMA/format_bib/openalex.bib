@article{pop00102,
	author = {Abhay Sharma},
	type = {journal-article},
	title = {Epidemiological transcriptomic data supports BCG protection in viral diseases including COVID-19},
	journal = {Gene},
	publisher = {Elsevier BV},
	doi = {10.1016/j.gene.2021.145574},
	issn = {0378-1119},
